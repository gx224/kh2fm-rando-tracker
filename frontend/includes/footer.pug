mixin popup(name)
  .popup
    button= name
    .content
      .body
        block

footer
  .container
    .info Kingdom Hearts 2 Final Mix Item Tracker - Version 1.4.3
    .info
      a(href="old") Click here
      |
      | to use the pre-1.4 version
    .buttons
      +popup("About")
        include about.pug

      +popup("Help")
        include help.pug

      +popup("Co-op")
        include co_op.pug

      +popup("Settings")
        include settings.pug
      
      form#export_run
        button(type="button") Export Run
      
      form#import_run
        input(type="file")#file_input
        button(type="button", name="Import Run") Import Run

